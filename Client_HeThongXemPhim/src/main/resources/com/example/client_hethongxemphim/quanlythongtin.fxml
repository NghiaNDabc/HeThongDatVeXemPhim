<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.client_hethongxemphim.controllers.SuaThongTinController" stylesheets="@css/quanlythongtin.css">
    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>
    <GridPane fx:id="gridPane" hgap="10" vgap="10">
        <Label text="Tên đầy đủ:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
        <TextField fx:id="fullNameField" GridPane.columnIndex="1" GridPane.rowIndex="0" />

        <Label text="Ngày sinh:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
        <TextField fx:id="dobField" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

        <Label text="Số điện thoại:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
        <TextField fx:id="phoneNumberField" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

        <Label text="Email:" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
        <TextField fx:id="emailField" GridPane.columnIndex="1" GridPane.rowIndex="3"/>
    </GridPane>
    <HBox fx:id="buttonContainer" spacing="10" alignment="center">
        <Button fx:id="saveButton" text="Lưu" onAction="#handleSave"/>
        <Button fx:id="cancelButton" text="Hủy" onAction="#handleCancel"/>
    </HBox>
</VBox>
