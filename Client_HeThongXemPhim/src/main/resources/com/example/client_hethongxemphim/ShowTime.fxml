<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.VBox?>

<?import java.net.URL?>
<BorderPane xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/21" fx:controller="com.example.client_hethongxemphim.controllers.ShowTimeController">
    <stylesheets>
        <URL value="@css/ShowTime.css" />
    </stylesheets>
    <top>
        <HBox fx:id="hboxTop" alignment="CENTER" spacing="10" BorderPane.alignment="CENTER" styleClass="hbox-center">
            <children>
                <Button fx:id="btnToday" text="Today" onAction="#handleDaySelection" styleClass="button-style"/>
                <Button fx:id="btnDayPlus1" text="+1 Day" onAction="#handleDaySelection" styleClass="button-style"/>
                <Button fx:id="btnDayPlus2" text="+2 Days" onAction="#handleDaySelection" styleClass="button-style"/>
                <Button fx:id="btnDayPlus3" text="+3 Days" onAction="#handleDaySelection" styleClass="button-style"/>
                <Button fx:id="btnDayMinus3" text="+4 Days" onAction="#handleDaySelection" styleClass="button-style"/>
                <Button fx:id="btnDayMinus2" text="+5 Days" onAction="#handleDaySelection" styleClass="button-style"/>
                <Button fx:id="btnDayMinus1" text="+6 Day" onAction="#handleDaySelection" styleClass="button-style"/>
            </children>
        </HBox>
    </top>
    <center>
        <ScrollPane fitToHeight="true" fitToWidth="true">
            <content>
                <VBox fx:id="showtimeContent" prefHeight="200.0" prefWidth="100.0" styleClass="vbox-content">
                    <!-- Nội dung của VBox -->
                </VBox>
            </content>
        </ScrollPane>
    </center>
</BorderPane>

